{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s %(levelname)s: %(message)s [in %(pathname)s:%(lineno)d]"
        }
    },
    "handlers": {
        "file": {
            "class": "security_monkey.log.GroupWriteRotatingFileHandler",
            "level": "DEBUG",
            "formatter": "standard",
            "filename": "/var/log/security_monkey/securitymonkey.log",
            "maxBytes": 10485760,
            "backupCount": 100,
            "encoding": "utf8"
        },
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "standard",
            "stream": "ext://sys.stdout"
        }
    },
    "loggers": {
        "": {
            "handlers": ["file", "console"],
            "level": "DEBUG"
        }
    }
}